# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_GUILD_ID=your_guild_id_for_development  # Optional

# Live Update Channels (create these in your Discord server)
DISCORD_ACTIVITY_CHANNEL_ID=channel_id_for_all_activity
DISCORD_HIGHLIGHTS_CHANNEL_ID=channel_id_for_highlights
DISCORD_MONITORING_CHANNEL_ID=channel_id_for_monitoring

# Web App API (for activity polling)
WEB_APP_URL=http://localhost:3000

# Monitoring Intervals (in milliseconds)
ACTIVITY_POLL_INTERVAL=30000   # 30 seconds
HEALTH_CHECK_INTERVAL=300000   # 5 minutes

# AI Provider Configuration
AI_PROVIDER=ollama  # or 'openai'
AI_MODEL=llama3.2:3b   # or 'gpt-4-turbo-preview' for OpenAI

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key

# Ollama Configuration (if using Ollama)
OLLAMA_HOST=http://localhost:11434
