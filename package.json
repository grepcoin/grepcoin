{
  "name": "grepcoin",
  "version": "1.0.0",
  "private": true,
  "description": "The AI-Built Crypto Arcade - Monorepo",
  "license": "MIT",
  "author": "GrepLabs LLC <hello@greplabs.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/grepcoin/grepcoin.git"
  },
  "homepage": "https://grepcoin.io",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/web",
    "start": "npm run start --workspace=apps/web",
    "lint": "npm run lint --workspace=apps/web",
    "test:contracts": "npm test --workspace=packages/contracts",
    "deploy:contracts": "npm run deploy --workspace=packages/contracts",
    "bot:dev": "npm run dev --workspace=apps/discord-bot",
    "bot:start": "npm run start --workspace=apps/discord-bot"
  },
  "devDependencies": {
    "@prisma/client": "^5.22.0",
    "prisma": "^5.22.0",
    "turbo": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
